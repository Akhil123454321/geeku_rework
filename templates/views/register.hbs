                        </div>

                        <script>
                            function checkradio(){
                                var x = document.getElementById("student");
                                var y = document.getElementById("teacher");

                                if(x.checked == true){
                                    y.checked = false;
                                    x.checked = true;
                                }
                                else if(y.checked == true){
                                    x.checked = false;
                                    y.checked = true;
                                }
                                else if(x.checked == false){
                                    y.checked = true;
                                }
                                else if(y.checked == false){
                                    x.checked = true;
                                }
                                else{
                                    x.checked = false;
                                    y.checked = false;
                                }
                            }
                        </script>
